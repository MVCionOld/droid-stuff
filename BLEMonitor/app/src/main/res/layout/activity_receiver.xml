<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiverActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginStart="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/receiver__text_view__receiver_iteration"
                android:text="Receiver iteration: 0"
                />

            <TextView
                android:layout_marginStart="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/receiver__text_view__unique_devices"
                android:text="Unique devices total: 0"
                />

            <TextView
                android:layout_marginStart="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/receiver__text_view__update_frequency"
                android:text="Update frequency: 5s"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <ProgressBar
                    android:layout_width="300sp"
                    android:layout_height="300sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/spinning_progress"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/zero"
                    android:id="@+id/receiver__text_view__counter"
                    android:textSize="120sp"
                    />
            </FrameLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:layout_gravity="bottom"
            />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>